<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:padding="10dp">


    <TextView
        android:id="@+id/word_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/maintext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/word_defn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/maintext"
        android:layout_below="@+id/word_main"
        android:layout_alignStart="@+id/word_main" />

    <ImageButton
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sound_off"
        android:background="@color/main"
        android:layout_alignBottom="@+id/word_main"
        android:layout_alignEnd="@+id/favorite"
        android:layout_marginEnd="42dp"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star_off"
        android:background="@color/main"
        android:layout_alignBottom="@+id/sound"
        android:layout_alignParentEnd="true"
        android:clickable="true"/>


</RelativeLayout>